@model Matrimony.Models.Profile

@{
    ViewBag.Title = "View Profile";
}

<div class="container">
    <h2 class="profile-name">@Model.FirstName @Model.LastName</h2>

    <div class="profile-container">
        <div class="profile-image">
            <div class="image-display-container">
                <div id="profileImageWrapper" class="image-wrapper">
                    <img id="profileImage" src="data:image/jpeg;base64,@Model.ProfileImageBase64" alt="Profile Image" class="profile-img" />
                    <div id="noImageText" class="no-image">No Image</div>
                </div>

                <button id="prevBtn" class="arrow-btn" onclick="showPreviousImage()">←</button>
                <button id="nextBtn" class="arrow-btn" onclick="showNextImage()">→</button>
            </div>
        </div>

        <div class="profile-details">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Height:</strong> @Model.Height</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Occupation:</strong> @Model.Occupation</p>
            <p><strong>Religion:</strong> @Model.Religion</p>
            <p><strong>Marital Status:</strong> @Model.MaritalStatus</p>
        </div>
    </div>

    <div class="action-buttons">
        <a href="javascript:window.history.back();" class="btn btn-secondary">Back</a>

        @if (ViewBag.IsInterestSent == true)
         {
            if (ViewBag.InterestStatus == "Accepted")
            {
                <button class="btn btn-success" disabled>Accepted</button>
            }
            else if (ViewBag.InterestStatus == "Rejected")
            {
                <button class="btn btn-danger" disabled>Rejected</button>
            }
            else
            {
                <button class="btn btn-secondary" disabled>Requested</button>
            }
         }
        else
        {
            <form id="interestForm" method="post" action="@Url.Action("SendInterest", "Home")">
                <input type="hidden" name="ProfileId" value="@Model.Id" />
                <input type="hidden" name="interestType" value="Send Interest" />
                <button type="submit" class="btn btn-primary" id="sendInterestButton">Send Interest</button>
            </form>
        }
    </div>

    <script src="~/Scripts/SweetAlert.js"></script>

    <!-- Success Modal -->
    <div id="successModal">
        <div class="modal-content-success">
            <p class="success-message">Interest Sent Successfully!</p>
            <button class="close-btn" onclick="closeSuccessModal()">Close</button>
        </div>
    </div>

</div>

<div id="imageModal" class="modal">
    <span class="close" onclick="closeModal()">&times;</span>
    <div id="modalImageWrapper" class="image-wrapper">
        <img class="modal-content" id="modalImage" />
        <div id="modalNoImageText" class="no-img">No Image Available</div>
    </div>
    <button class="arrow-btn prev" onclick="showPreviousModalImage()">←</button>
    <button class="arrow-btn next" onclick="showNextModalImage()">→</button>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 100%;
        padding: 20px;
    }

    .profile-name {
        text-align: center;
        font-size: 2.5em;
        font-weight: 600;
        color: #333;
        margin-top: 10px;
    }

    .profile-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        padding: 40px;
        max-width: 1000px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-image {
        flex: 1;
        text-align: center;
        margin-left: 30px;
        position: relative;
        object-fit: cover;
    }

    .profile-img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #ddd;
        margin-top: 100px;
        margin-left: 30px;
    }

    .no-image {
        display: none;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        color: #777;
        font-size: 1.2em;
        border: 4px solid #ddd;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        text-align: center;
        margin-left: 30px;
        margin-top: 100px;
    }

    .profile-details {
        flex: 2;
        color: #555;
        font-size: 1.1em;
        line-height: 1.8;
        margin-left: 100px;
    }

        .profile-details p {
            margin: 10px 0;
        }

        .profile-details strong {
            font-weight: 700;
            color: #333;
        }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

        .action-buttons button, .action-buttons a {
            font-size: 1.2em;
            padding: 6px 15px;
            border-radius: 5px;
            cursor: pointer;
            width: 150px;
            text-align: center;
        }

    .btn-primary {
        background-color: orangered;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: orangered;
        }

    .btn-secondary {
        background-color: #5a6268;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-success {
        background-color: forestgreen;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: forestgreen;
        }

    .btn-danger {
        background-color: red;
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: darkred;
        }

    .arrow-btn {
        background: transparent;
        color: dimgray;
        font-size: 2em;
        border: none;
        padding: 0;
        position: absolute;
        top: 65%;
        transform: translateY(-50%);
        cursor: pointer;
        transition: background 0.3s ease, padding 0.3s ease, border-radius 0.3s ease;
        z-index: 10;
    }

        .arrow-btn:hover {
            background: rgba(0, 0, 0, 0.5);
            padding: 7px;
            color: white;
            border-radius: 50%;
        }

        .arrow-btn:focus {
            outline: none;
        }

    #prevBtn {
        left: -15px;
    }

    #nextBtn {
        right: -15px;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 60px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.9);
    }

    .modal-content {
        margin: auto;
        display: block;
        width: 600px;
        height: 600px;
        object-fit: cover;
        max-width: 100%;
        max-height: 100%;
        margin-top: 80px;
    }

    .close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .close:hover,
        .close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }

    .prev, .next {
        background: transparent;
        color: dimgray;
        font-size: 2em;
        border: none;
        padding: 0;
        position: absolute;
        top: 65%;
        transform: translateY(-50%);
        cursor: pointer;
        transition: background 0.3s ease, padding 0.3s ease, border-radius 0.3s ease;
        z-index: 10;
        margin-top: -100px;
    }   

    .arrow-btn.prev {
        left: 10px;
    }

    .arrow-btn.next {
        right: 10px;
    }

    .no-img {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        width: 600px;
        height: 600px;
        font-size: 1.5em;
        color: #777;
        font-weight: bold;
        background-color: rgba(255, 255, 255, 0.7);
        border: 4px solid #ddd;
        border-radius: 10px;
        margin-left: 550px;
        margin-top: 85px;
    }
    #successModal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content-success {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .success-message {
        font-size: 1.5em;
        color: #28a745; 
        margin-bottom: 20px;
    }

    .close-btn {
        padding: 10px 20px;
        background-color: orangered; 
        color: white;
        font-size: 1em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top:20px;
    }

        .close-btn:hover {
            background-color: orangered;
        }

    .modal-content-success p {
        margin: 0;
    }
</style>

<script>

    $('#interestForm').submit(function (e) {
        e.preventDefault();

        
        var formData = $(this).serialize();

        $.ajax({
            type: 'POST',
            url: $(this).attr('action'),
            data: formData,
            success: function (response) {
                
                showSuccessModal();
            },
            error: function (xhr, status, error) {
                
                alert('Something went wrong. Please try again.');
            }
        });
    });

    function showSuccessModal() {
        document.getElementById("successModal").style.display = "flex";
    }

    function closeSuccessModal() {
        document.getElementById("successModal").style.display = "none";
        location.reload();
    }

    //Image Section

    let currentImageIndex = 0;

    const images = [
        "@Model.ProfileImageBase64",
        "@Model.image1Base64",
        "@Model.image2Base64",
        "@Model.image3Base64",
        "@Model.image4Base64"
    ];

    function showImage(index) {
        const img = document.getElementById('profileImage');
        const noImageText = document.querySelector('.no-image');

        if (images[index]) {
            img.src = 'data:image/jpeg;base64,' + images[index];
            img.style.display = 'block';
            noImageText.style.display = 'none';
        } else {
            img.src = '';
            img.style.display = 'none';
            noImageText.style.display = 'flex';
        }
    }

    function showNextImage() {
        if (currentImageIndex < images.length - 1) {
            currentImageIndex++;
        } else {
            currentImageIndex = 0;
        }
        showImage(currentImageIndex);
    }

    function showPreviousImage() {
        if (currentImageIndex > 0) {
            currentImageIndex--;
        } else {
            currentImageIndex = images.length - 1;
        }
        showImage(currentImageIndex);
    }

    showImage(currentImageIndex);

    function openModal(src) {
        const modal = document.getElementById('imageModal');
        const modalImg = document.getElementById('modalImage');
        const modalNoImageText = document.getElementById('modalNoImageText');

        modal.style.display = 'block';

        if (src) {
            modalImg.src = src;
            modalImg.style.display = 'block';
            modalNoImageText.style.display = 'none';
        } else {
            modalImg.style.display = 'none';
            modalNoImageText.style.display = 'flex';
        }
    }

    function closeModal() {
        const modal = document.getElementById('imageModal');
        modal.style.display = 'none';
    }

    document.getElementById('profileImage').onclick = function () {
        openModal(this.src);
    };

    function showNextModalImage() {
        currentImageIndex = (currentImageIndex + 1) % images.length;
        const modalImg = document.getElementById('modalImage');
        const modalNoImageText = document.getElementById('modalNoImageText');

        if (images[currentImageIndex]) {
            modalImg.src = 'data:image/jpeg;base64,' + images[currentImageIndex];
            modalImg.style.display = 'block';
            modalNoImageText.style.display = 'none';
        } else {
            modalImg.style.display = 'none';
            modalNoImageText.style.display = 'flex';
        }
    }

    function showPreviousModalImage() {
        currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
        const modalImg = document.getElementById('modalImage');
        const modalNoImageText = document.getElementById('modalNoImageText');

        if (images[currentImageIndex]) {
            modalImg.src = 'data:image/jpeg;base64,' + images[currentImageIndex];
            modalImg.style.display = 'block';
            modalNoImageText.style.display = 'none'; 
        } else {
            modalImg.style.display = 'none';
            modalNoImageText.style.display = 'flex'; 
        }
    }
</script>
