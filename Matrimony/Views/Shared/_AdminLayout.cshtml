<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="~/Content/admin-style.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper" class="d-flex">
        <div id="sidebar" class="bg-dark text-light">
            <div class="sidebar-header text-center py-4">
                <h3 class="text-white">Welcome Back!...Admin</h3>
            </div>
            <ul class="sidebar-nav list-unstyled px-3">
                <li><a href="@Url.Action("AdminDashboard", "Admin")"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageUsersDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-users-cog"></i> Manage Users
                    </a>
                    <div class="dropdown-menu" aria-labelledby="manageUsersDropdown">
                        <a class="dropdown-item" href="@Url.Action("AllUsers", "Admin")">All Users</a>
                        <a class="dropdown-item" href="@Url.Action("MaleUsers", "Admin")">Males</a>
                        <a class="dropdown-item" href="@Url.Action("FemaleUsers", "Admin")">Females</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageUsersDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-bullhorn"></i> Announcements
                    </a>
                    <div class="dropdown-menu" aria-labelledby="manageUsersDropdown">
                        <a class="dropdown-item" href="@Url.Action("Announcement", "Admin")">To All Users</a>
                        <a class="dropdown-item" href="@Url.Action("ToPerticularUsers", "Admin")">To Particular Users</a>
                    </div>
                </li>

                <li><a href="/Admin/Messages"><i class="fas fa-envelope"></i> Messages</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageRolesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-key"></i> Manage Roles
                    </a>
                    <div class="dropdown-menu" aria-labelledby="manageRolesDropdown">
                        <a class="dropdown-item" href="@Url.Action("UserRoles", "Admin")">User Roles</a>
                        <a class="dropdown-item" href="@Url.Action("AddRole", "Admin")">Add New Role</a>
                    </div>
                </li>

                <li><a href="/Admin/LogOut"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </div>

        <div id="content" class="p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/Scripts/admin-script.js"></script>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f7fa;
        color: #333;
        transition: all 0.3s ease;
    }

    #wrapper {
        display: flex;
        height: 100vh;
        overflow-x: hidden;
    }

    #sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 320px;
        height: 100%;
        background-color:black;
        color: white;
        box-shadow: 3px 0 15px rgba(0, 0, 0, 0.1);
        transition: 0.3s ease;
        z-index: 100;
    }

    .sidebar-header {
        background-color: orangered;
        padding: 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 18px;
    }

    .sidebar-header h3 {
        color: white;
        margin: 0;
        font-size: 20px;
    }

    .sidebar-nav {
        list-style-type: none;
        margin-top: 30px;
    }

    .sidebar-nav li {
        margin: 18px 0;
    }
     .sidebar-nav a i {
         margin-right: 10px;
     }

    .sidebar-nav a {
        color: #ecf0f1;
        text-decoration: none;
        font-size: 18px;
        padding: 15px 15px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border-radius: 5px;
        width: 100%;
    }

   .sidebar-nav a:hover {
        background-color: dimgray;
        color: white;
        padding-left: 30px; 
        width: 100%; 
   }

    .sidebar-nav .dropdown-menu {
        background-color: #34495e;
        border-radius: 5px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar-nav .dropdown-menu a {
        padding: 12px 20px;
        font-size: 16px;
        color: #ecf0f1;
    }

    .sidebar-nav .dropdown-menu a:hover {
        background-color: orangered;
        color: white;
    }

    #content {
        margin-left: 280px;
        padding: 20px;
        width: calc(100% - 280px);
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: margin-left 0.3s ease, width 0.3s ease;
    }

    media screen and (max-width: 768px) {
        #sidebar {
            width: 240px;
            padding-top: 20px;
        }

        #content {
            margin-left: 0;
            width: 100%;
        }

        .sidebar-nav a {
            font-size: 16px;
        }

        .sidebar-header {
            padding: 10px;
        }
    }

    media screen and (max-width: 480px) {
        #sidebar {
            width: 100%;
            height: auto;
        }

        #content {
            margin-left: 0;
            width: 100%;
        }

        .sidebar-nav {
            text-align: center;
        }
    }
</style>
