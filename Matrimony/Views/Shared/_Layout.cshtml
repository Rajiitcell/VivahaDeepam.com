<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Matrimony Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        transition: background-color 0.3s ease;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar {
        background-color: #212529;
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 1000;
        width: 100%;
        box-sizing: border-box;
        height: 80px;
    }

    .navbar .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar-brand {
        font-size: 1.8rem;
        color: #fff !important;
        font-weight: bold;
        display: flex;
        align-items: center;
        padding-left: 15px;
    }

    .navbar-brand img {
        margin-right: 10px;
        width:40px;
        height:40px;
        border-radius:50%;
    }
        .navbar-nav .nav-link.dropdown-toggle::after {
            display: none;
        }

    .navbar-nav {
        display: flex;
        align-items: center;
        margin-left: auto;
    }

        .navbar-nav .nav-link {
        color: #d1d1d1 !important;
        font-size: 1.1rem;
        margin-right: 25px;
        padding: 8px 12px;
        transition: color 0.3s ease;
        border-radius: 4px;
        position: relative;
    }

    .navbar-nav .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height:1.5px;
        background-color: white;
        transform: scaleX(0);
        transition: transform 0.3s ease;
        transform-origin: bottom right;
    }

    .navbar-nav .nav-link:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }

    .navbar-nav .nav-link:hover,
    .navbar-nav .nav-link:focus {
        color: #fff !important;
        background-color: transparent;
        text-decoration: none;
    }

    .navbar-nav .nav-item.active .nav-link {
        background-color: transparent;
        color: #fff !important;
    }

    .navbar-nav .nav-item img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
    }

    .profile-img-placeholder {
        width: 40px;
        height: 40px;
        background-color: #ccc;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        color: #fff;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .dropdown-menu {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: none;
        position: absolute;
        z-index: 1050;
    }

    .dropdown-item {
        padding: 10px 20px;
        font-size: 1rem;
    }

    .dropdown-item:hover {
        background-color: orangered;
        color: #fff;
    }

    .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
        display: block;
    }

    .modal-backdrop {
        z-index: 1040 !important;
    }

    .modal {
        z-index: 1051 !important;
    }

    .modal-content {
        max-width: 400px;
        width: 100%;
    }

    .notification-item {
        margin-bottom: 15px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }
    .notification-item img {
       width: 50px;
       height: 50px;
       object-fit: contain;
       max-width: 100%;
       max-height: 100%; 
       cursor: default;
    }

    .notification-item .ms-3 {
        margin-left: 15px;
    }

    .btn-link {
        font-size: 0.9rem;
        color: orangered;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
        color:orangered;
    }

    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: orangered;
        color: white;
        border-radius: 50%;
        padding: 5px 10px;
        font-size: 0.9rem;
        font-weight: bold;
    }

    .container-content {
        padding-top: 10px;
    }

    media (max-width: 768px) {
        .navbar-collapse {
            text-align: center;
        }

        .navbar-nav {
            flex-direction: column;
            text-align: center;
        }

        .navbar-nav .nav-link {
            margin-right: 0;
            margin-bottom: 10px;
        }
    }

    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <div class="navbar-brand">
                <img src="~/Images/Matrimony logo.png" alt="Matrimonial Site Logo">
               Tamil Tech Matrimony
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Dashboard"> Home </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Matches"> Matches </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/ViewProfile"> My Profile </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Profiles
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Home/InterestRequests">Incoming Requests</a></li>
                            <li> <a class="dropdown-item cursive-nav-link" href="/Home/AcceptedProfiles">Accepted Profiles</a></li>
                            <li><a class="dropdown-item cursive-nav-link" href="/Home/RejectedProfiles">Rejected Profiles</a></li>
                            <li><a class="dropdown-item cursive-nav-link" href="/Home/IgnoredProfiles">Ignored Profiles</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                             Interests
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Home/YourInterests">Your Interests</a></li>
                            <li> <a class="dropdown-item cursive-nav-link" href="/Home/AcceptedRequests">Accepted Requests</a></li>
                            <li><a class="dropdown-item cursive-nav-link" href="/Home/RejectedRequests">Rejected Requests</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#" id="notification-link" data-bs-toggle="modal" data-bs-target="#notificationModal">
                             Notifications
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/LogOut"> Logout </a>
                    </li>

                    <li class="nav-item">
                        @if (Session["ProfileImage"] != null)
                         {
                            <img src="data:image/jpeg;base64,@Session["ProfileImage"]" class="img-fluid rounded-circle" alt="Profile Image">
                         }
                        else
                        {
                            <div class="profile-img-placeholder">P</div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="notificationModalLabel">Notifications</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="notifications-content">
                </div>
            </div>
        </div>
    </div>

    <div class="container container-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById('notification-link').addEventListener('click', function(e) {
            e.preventDefault();
            fetchNotifications();
        });

        function fetchNotifications() {
           fetch('@Url.Action("GetNotifications", "Home")')
            .then(response => response.json())
            .then(notifications => {
                let content = '';
                notifications.forEach(notification => {
                    content += `
                    <div class="notification-item d-flex align-items-center">
                        <!-- Check if there's a profile image -->
                        ${notification.ViewerProfileImage && notification.ViewerProfileImage.length > 0
                                        ? `<img src="data:image/jpeg;base64,${notification.ViewerProfileImage}" class="rounded-circle" style="width: 50px; height: 50px;" alt="Profile Image">`
                                        : `<i class="fas fa-user-circle" style="font-size: 50px; color: #ccc;"></i>`
                                    }
                        <div class="ms-3">
                            <strong>${notification.ViewerFirstName} ${notification.ViewerLastName}</strong>
                            <p class="mb-1">Viewed your profile <span class="text-muted">${notification.TimeAgo}</span></p>
                            <a href="/Home/FullDetails/${notification.ViewerId}" class="btn btn-link p-0">View Profile</a>
                        </div>
                    </div>`;
                });
                document.getElementById('notifications-content').innerHTML = content;
            })
            .catch(error => {
                console.error('Error fetching notifications:', error);
                document.getElementById('notifications-content').innerHTML = "<p>Error loading notifications.</p>";
            });

        }
    </script>

</body>
</html>
