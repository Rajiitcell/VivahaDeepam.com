@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            text-align: center;
            margin-top:-100px;
        }

        h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }

        .error-message {
            color: red;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 94%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            color: #333;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            }

        button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: orangered;
            color: white;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: orangered;
            }

        .back-button {
            background-color: #6c757d;
            margin-top: 20px;
            width: 100%;
        }

            .back-button:hover {
                background-color: #6c757d;
            }

        media (max-width: 500px) {
            .container

        {
            padding: 20px;
        }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Forgot Password</h2>

        @if (ViewBag.ErrorMessage != null)
         {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
         }

        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Enter your email" })
                @Html.ValidationMessage("email", "", new { @class = "text-danger" })
            </div>

            <button type="submit">Submit</button>
         }

        <a href="@Url.Action("LogIn", "Home")">
            <button type="button" class="back-button">Back to Login</button>
        </a>
    </div>
</body>
</html>
